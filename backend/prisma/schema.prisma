generator client {
  provider = "prisma-client-js"
  
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  email String @unique
  name String
  password String
  posts Post[]
}

model Post{
  id String @id @default(uuid())
  title String
  description String
  published Boolean @default(false)
  author User @relation(fields: [author_id], references: [id])
  author_id String
}
